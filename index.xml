<?xml version="1.0" encoding="utf8"?>
<!-- 根元素统一为 <reapack>（ReaPack 标准），避免旧版 <index> 潜在兼容问题 -->
<reapack>
    <!-- 1. 仓库元数据（必填，用于 ReaPack 识别仓库来源） -->
    <repositories>
        <repository 
            name="ReaperTools"  <!-- 仓库名称，与工具集一致 -->
            author="XFeng"       <!-- 作者信息，与版本作者一致 -->
            url="https://github.com/XFeng111/Reaper_Tools/raw/refs/heads/main/index.xml"  <!-- 此 XML 文件的 GitHub Raw 地址（需确保真实可访问） -->
            description="Utility tools for REAPER 7 (track management, region operations, etc.)"  <!-- 仓库功能简述，方便用户识别 -->
        />
    </repositories>

    <!-- 2. 功能分类（保留原 "Tools" 分类，符合工具集定位） -->
    <category name="Tools">
        <!-- 核心修正：脚本包用 <package> 标签（替代嵌套的 <reapack>，符合 ReaPack 层级规范） -->
        <package name="ReaperTools: Tools for REAPER 7" type="script">
            <!-- 版本信息（保留原版本号、作者、时间，补充兼容性说明） -->
            <version 
                name="1.0.0" 
                author="XFeng" 
                time="2025-09-02T06:52:18Z"
                compatibility="REAPER 7.0+"  <!-- 明确兼容版本，减少用户误解 -->
            >
                <!-- 脚本文件列表（保留原路径和 URL，确保安装位置正确） -->
                <!-- 主脚本：标记 main="true"，ReaPack 优先显示 -->
                <file 
                    target="Scripts/Toolbox_Custom/F_Tool/F_region范围适应items.lua" 
                    url="https://github.com/XFeng111/Reaper_Tools/raw/refs/heads/main/Toolbox_Custom/F_Tool/F_region%E8%8C%83%E5%9B%B4%E9%80%82%E5%BA%94items.lua" 
                    type="script"
                    main="true"
                    description="Fit items to region range (调整音频片段匹配标记区域长度)"  <!-- 补充功能描述 -->
                />
                <file 
                    target="Scripts/Toolbox_Custom/F_Tool/F_从TXT文件读取名称创建连续的regions.lua" 
                    url="https://github.com/XFeng111/Reaper_Tools/raw/refs/heads/main/Toolbox_Custom/F_Tool/F_%E4%BB%8ETXT%E6%96%87%E4%BB%B6%E8%AF%BB%E5%8F%96%E5%90%8D%E7%A7%B0%E5%88%9B%E5%BB%BA%E8%BF%9E%E7%BB%AD%E7%9A%84regions.lua" 
                    type="script"
                    description="Create continuous regions from TXT names (从TXT读取名称批量创建连续标记)"
                />
                <file 
                    target="Scripts/Toolbox_Custom/F_Tool/F_时间选区下内容删除(含item轨道).lua" 
                    url="https://github.com/XFeng111/Reaper_Tools/raw/refs/heads/main/Toolbox_Custom/F_Tool/F_%E6%97%B6%E9%97%B4%E9%80%89%E5%8C%BA%E4%B8%8B%E5%86%85%E5%AE%B9%E5%88%A0%E9%99%A4(%E5%90%ABitem%E8%BD%A8%E9%81%93).lua" 
                    type="script"
                    description="Delete content in time selection (including items/tracks, 删除时间选区内容及轨道)"
                />
                <file 
                    target="Scripts/Toolbox_Custom/F_Tool/F_白色标记区域下所有内容删除(含item轨道).lua" 
                    url="https://github.com/XFeng111/Reaper_Tools/raw/refs/heads/main/Toolbox_Custom/F_Tool/F_%E7%99%BD%E8%89%B2%E6%A0%87%E8%AE%B0%E5%8C%BA%E5%9F%9F%E4%B8%8B%E6%89%80%E6%9C%89%E5%86%85%E5%AE%B9%E5%88%A0%E9%99%A4(%E5%90%ABitem%E8%BD%A8%E9%81%93).lua" 
                    type="script"
                    description="Delete content in white marker regions (including items/tracks, 删除白色标记区域内容及轨道)"
                />
                <file
                    target="Scripts/Toolbox_Custom/LKC_Ext/T_LKC_Structure.lua" 
                    url="https://github.com/XFeng111/Reaper_Tools/raw/refs/heads/main/Toolbox_Custom/LKC_Ext/T_LKC_Structure.lua" 
                    type="script"
                    description="LKC structure management (LKC轨道结构管理基础脚本)"
                />
                <file
                    target="Scripts/Toolbox_Custom/LKC_Ext/T_LKC_Structure_Make.lua" 
                    url="https://github.com/XFeng111/Reaper_Tools/raw/refs/heads/main/Toolbox_Custom/LKC_Ext/T_LKC_Structure_Make.lua" 
                    type="script"
                    description="Create LKC structure (生成LKC轨道结构)"
                />
                <file
                    target="Scripts/Toolbox_Custom/LKC_Ext/LKC_Ext_Steps/T_父轨设置RandomContainer_时间选区（多个）.lua" 
                    url="https://github.com/XFeng111/Reaper_Tools/raw/refs/heads/main/Toolbox_Custom/LKC_Ext/LKC_Ext_Steps/T_%E7%88%B6%E8%BD%A8%E8%AE%BE%E7%BD%AERandomContainer_%E6%97%B6%E9%97%B4%E9%80%89%E5%8C%BA%EF%BC%88%E5%A4%9A%E4%B8%AA%EF%BC%89.lua" 
                    type="script"
                    description="Set RandomContainer for parent tracks (multiple time selections, 父轨批量设置RandomContainer)"
                />
                <file
                    target="Scripts/Toolbox_Custom/LKC_Ext/LKC_Ext_Steps/T_父轨下迭代.lua" 
                    url="https://github.com/XFeng111/Reaper_Tools/raw/refs/heads/main/Toolbox_Custom/LKC_Ext/LKC_Ext_Steps/T_%E7%88%B6%E8%BD%A8%E4%B8%8B%E8%BF%AD%E4%BB%A3.lua" 
                    type="script"
                    description="Iterate under parent tracks (父轨下子轨道迭代处理)"
                />
            </version>

            <!-- 3. 包元数据优化（补充详细描述和标签，提升搜索体验） -->
            <metadata>
                <description>
                    ReaperTools: A collection of utility scripts for REAPER 7, focusing on track management and region operations. 
                    Key features include: fitting items to regions, batch creating regions from TXT, deleting content in selections/markers, 
                    and LKC track structure management. Suitable for improving workflow efficiency in audio production.
                </description>
                <tags>track management, region, batch operation, workflow, LKC</tags>  <!-- 补充搜索标签，方便用户找到工具 -->
                <homepage>https://github.com/XFeng111/Reaper_Tools</homepage>  <!-- 项目主页，方便用户查看更新和文档 -->
            </metadata>
        </package>
    </category>

    <!-- 4. 全局元数据（简要描述仓库整体功能） -->
    <metadata>
        <description>ReaperTools Repository: Utility scripts for REAPER 7 to enhance workflow efficiency.</description>
    </metadata>
</reapack>
